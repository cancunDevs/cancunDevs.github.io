---
import { Code, Cloud, Users, Book, Briefcase, HelpCircle } from '@lucide/astro';

export type Icon = 'code' | 'cloud' | 'users' | 'book' | 'briefcase' | 'help-circle';

const IconMap = {
    'code': Code,
    'cloud': Cloud,
    'users': Users,
    'book': Book,
    'briefcase': Briefcase,
    'help-circle': HelpCircle,
};

interface Props {
    title: string;
    description: string;
    icon: Icon;
}

const { title, description, icon } = Astro.props as Props;
const IconComponent = IconMap[icon];


---

<div class="bg-white border border-gray-200 p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
    <div class="flex flex-row items-start gap-2">
        {IconComponent && <IconComponent class="w-6 h-6 text-blue-600" />}
        <h3 class="text-xl font-semibold text-blue-600 mb-4">{title}</h3>
    </div>
    <p class="text-gray-700">{description}</p>
</div>  